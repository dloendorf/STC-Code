@model OPUS.Models.STCPlayers


@{
    ViewBag.Title = "Load Members";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/jquery-2.1.4.js" type="text/javascript"></script>

    <div>
        <div>Paste STC Member List</div>
        <br />
        @Html.TextArea("pastedtext", null, 10, 55, null)
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Load Members" class="btn btn-primary" />
            <a class="btn btn-primary" href="/CourtAssignments/Index">Cancel</a>
        </div>
    </div>
    <p><a class="btn btn-primary" target="_blank" href="http://saddlebrooketennisclub.net/?page_id=10">STC Sign Up For OPUS</a></p>
}