@model IEnumerable<OPUS.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}
<h2>Current OPUS Management Logins</h2>
<p><a class="btn btn-primary" href="/Users/Create">Add User</a></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("User Name")
        </th>
        @*Add a table header for the Address info:*@
        @*<th>
            @Html.DisplayNameFor(model => model.DisplayAddress)
        </th>*@
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.DisplayAddress)
            </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
