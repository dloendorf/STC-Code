@model OPUS.ViewModels.CloseSessionViewModel
@{
    ViewBag.Title = "Close Session";
}
<br/>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h2>Close Session</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <span>Men's:</span>
                @Html.RadioButton("Gender", "M", new { @checked = "checked", @style = "width:auto;background:none;border:none" })
                <span> Or Ladies':</span>
                @Html.RadioButton("Gender", "F", new { @style = "width:auto;background:none;border:none" })
            </div>
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div>
            @{
                if (Model.Closed)
                {
                    <div class="form-group">
                        @Html.Label(Model.Message, htmlAttributes: new { @class = "control-label col-md-3" })
                        <a class="btn btn-primary" href="/CloseSession/Index">OK</a>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Close Session" class="btn btn-primary" />
                            <a class="btn btn-primary" href="/Home/Index">Cancel</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
