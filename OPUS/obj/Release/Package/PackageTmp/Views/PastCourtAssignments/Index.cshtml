@model IEnumerable<OPUS.Models.PastCourtAssignment>

@{
    ViewBag.Title = "Index";
}

<h2>Previous Seasons Court Assignments</h2>
<br/>
<div class="container-fluid">
    <div class="row">
        <div>
            @using (Html.BeginForm("SelectSeason", "PastCourtAssignments", FormMethod.Post, new { id = "SelectSeason" }))
            {
                <table>
                    @*<tr><td height="30"></td></tr>*@
                    <tr>
                        <td width="100px">Select Session</td>
                        <td>
                            @Html.DropDownList("Season", (IEnumerable<SelectListItem>)ViewBag.Seasons, "--Select One--", new { onchange = "document.getElementById('SelectSeason').submit();" })
                        </td>
                    </tr>
                    <tr><td height="30"></td></tr>
                </table>
            }
        </div>
        <div>
            @using (Html.BeginForm("SelectDate", "PastCourtAssignments", FormMethod.Post, new { id = "SelectDate" }))
            {
                <table>
                    @*<tr><td height="30"></td></tr>*@
                    <tr>
                        <td width="100px">Select Date</td>
                        <td>
                            @Html.DropDownList("Date", (IEnumerable<SelectListItem>)ViewBag.CourtDates, "--Select One--", new { onchange = "document.getElementById('SelectDate').submit();" })
                        </td>
                    </tr>
                    <tr><td height="30"></td></tr>
                </table>
            }
        </div>
    </div>
</div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Court)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player4)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Court)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player4)
                </td>
            </tr>
        }

    </table>
